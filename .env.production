# Environment Variables for Production
NODE_ENV=production
PORT=3001

# File handling
MAX_FILE_SIZE=50mb
TEMP_DIR=/tmp/mermaid-temp

# Mermaid CLI configuration
DEFAULT_THEME=default
DEFAULT_WIDTH=1200
DEFAULT_HEIGHT=800
RENDER_TIMEOUT=60000

# Puppeteer configuration for Render.com
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-gpu,--no-first-run,--no-zygote,--single-process

# Security
ALLOWED_ORIGINS=https://your-render-app.onrender.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
